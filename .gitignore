cat > .gitignore <<'EOF'
# Java / Maven / Gradle (Spring Boot)
target/
*.class
*.jar
*.war
*.ear
*.iml
.mvn/
.gradle/
build/
out/
!.mvn/wrapper/maven-wrapper.jar

# IDE files
/.idea/
/.vscode/
*.log
*.iml

# Node / React
node_modules/
dist/
build/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# OS files
.DS_Store
Thumbs.db

# Logs and temp
logs/
*.log
*.tmp

# Terraform folder (if you don't want to commit local state)
*.tfstate
*.tfstate.backup
.terraform/
EOF

